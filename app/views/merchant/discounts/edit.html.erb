<%= content_tag :h1, "Edit Bulk Discount" %>

<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
  <%= label_tag :percentage %>
  <%= text_field_tag :percentage, @discount.percentage %>

  <%= label_tag :items_needed %>
  <%= text_field_tag :items_needed, @discount.items_needed %>

  <%= submit_tag 'Update Discount' %>
<% end %>
